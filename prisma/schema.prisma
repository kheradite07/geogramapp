datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "rhel-openssl-3.0.x"]
}

model Account {
  id                 String  @id @default(cuid())
  userId             String
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String?
  access_token       String?
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String?
  session_state      String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  
  // Custom Fields
  username      String?   @unique
  fullName      String?
  bio           String?
  isOnboarded   Boolean   @default(false)
  isAnonymous   Boolean   @default(false)
  
  // Location Tracking
  lastLat       Float?
  lastLng       Float?
  lastSeen      DateTime?
  
  // Privacy Settings
  hideLocationFromFriends Boolean @default(false)
  
  accounts      Account[]
  sessions      Session[]
  
  messages      Message[]
  comments      Comment[]
  
  // Friendship Logic
  friendsRequested Friendship[] @relation("UserFriendRequestsSent")
  friendsReceived  Friendship[] @relation("UserFriendRequestsReceived")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Message {
  id        String   @id @default(cuid())
  content   String
  latitude  Float
  longitude Float
  createdAt DateTime @default(now())
  
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  // Snapshot of user state at time of posting
  authorName  String
  authorImage String?
  isAnonymous Boolean @default(false)
  
  visibility  String  @default("public") // "public" | "friends"
  
  // Vote tracking
  likes       Int     @default(0)
  dislikes    Int     @default(0)
  likedBy     String  @default("[]") // JSON array of user identifiers
  dislikedBy  String  @default("[]") // JSON array of user identifiers
  
  comments    Comment[]
}

model Friendship {
  id        String   @id @default(cuid())
  requesterId String
  receiverId  String
  status      String   @default("pending") // "pending" | "accepted"
  createdAt   DateTime @default(now())

  requester User @relation("UserFriendRequestsSent", fields: [requesterId], references: [id], onDelete: Cascade)
  receiver  User @relation("UserFriendRequestsReceived", fields: [receiverId], references: [id], onDelete: Cascade)

  @@unique([requesterId, receiverId])
}

model Comment {
  id        String   @id @default(cuid())
  content   String
  createdAt DateTime @default(now())
  
  messageId String
  message   Message  @relation(fields: [messageId], references: [id], onDelete: Cascade)
  
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  // Snapshot of user state at time of commenting
  authorName  String
  authorImage String?
  isAnonymous Boolean @default(false)
}
